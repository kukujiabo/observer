<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/bjtwo"
    >
    
	<RelativeLayout
        android:id="@+id/ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/touxiangcaidann"
        >
        
	        
	         <ImageButton
	            android:id="@+id/fanhui"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:layout_centerVertical="true"
	            android:layout_marginLeft="10dp"
	            android:background="@drawable/huanhui" />


	        <TextView
	            android:id="@+id/ok"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:layout_marginRight="20dp"
	            android:textSize="15sp"
	            android:textColor="@color/white"
	            android:text="保存" />

    </RelativeLayout>
    
	<EditText
	        android:id="@+id/set_names"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/ll"
	        android:background="@null"
	        android:layout_centerVertical="true"
	        android:singleLine="true"
	        android:layout_marginTop="20dp"
	        android:layout_marginLeft="20dp"
	        android:layout_marginRight="20dp"
	        android:textColor="@color/text_black"
	        android:maxLength="3"
	        android:inputType="number"
	        android:hint="修改温度和湿度" >
	    </EditText>

	<ImageView
	    android:id="@+id/iv"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/set_name"
	    android:layout_marginLeft="20dp"
	    android:layout_marginRight="20dp"
	    android:src="@drawable/mingchengg" />

	    
</RelativeLayout>
