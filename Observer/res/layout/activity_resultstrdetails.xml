<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/bjtwo"
    >
    
	<RelativeLayout
        android:id="@+id/ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/xiangqingjieshaoa"
        >
        
	        
	         <ImageButton
	            android:id="@+id/fanhui"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:layout_centerVertical="true"
	            android:layout_marginLeft="10dp"
	            android:background="@drawable/huanhui" />

    </RelativeLayout>
    
	<RelativeLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_below="@+id/ll"
	    >

		<ImageView
		    android:id="@+id/iv"
		    android:layout_width="fill_parent"
		    android:layout_height="100dp"
		    android:layout_alignParentLeft="true"
		    android:layout_alignParentTop="true"
		    android:background="@null" />

		<TextView
		    android:id="@+id/tv"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentLeft="true"
		    android:layout_below="@+id/iv"
		    android:layout_marginLeft="20dp"
		    android:layout_marginTop="10dp"
		    android:textSize="20sp"
		    android:textColor="#777777"
		    android:text="商品信息" />

		<ImageView
		    android:id="@+id/iv2"
		    android:layout_width="wrap_content"
		    android:layout_height="1dp"
		    android:layout_alignParentLeft="true"
		    android:layout_below="@+id/tv"
		    android:layout_marginLeft="20dp"
		    android:background="@drawable/xiantiaot" />

		<TextView
		    android:id="@+id/tv2"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignLeft="@+id/iv2"
		    android:layout_below="@+id/iv2"
		    android:layout_marginTop="10dp"
		    android:textSize="15sp"
		    android:textColor="#777777"
		    android:text="商品名称 :" />

		<TextView
		    android:id="@+id/name"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignBaseline="@+id/tv2"
		    android:layout_alignBottom="@+id/tv2"
		    android:layout_toRightOf="@+id/tv"
		     android:textSize="15sp"
		    android:textColor="#999999"
		    android:text="德玛西亚嘉文四世" />

		<TextView
		    android:id="@+id/tv3"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignLeft="@+id/tv2"
		    android:layout_below="@+id/tv2"
		     android:textSize="15sp"
		     android:layout_marginTop="5dp"
		    android:textColor="#777777"
		    android:text="品牌 :" />

		<TextView
		    android:id="@+id/brand"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignTop="@+id/tv3"
		    android:layout_toRightOf="@+id/tv3"
		    android:layout_marginLeft="10dp"
		      android:textSize="15sp"
		    android:textColor="#999999"
		    android:text="德玛西亚" />

		<TextView
		    android:id="@+id/tv4"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignLeft="@+id/tv3"
		    android:layout_below="@+id/tv3"
		     android:layout_marginTop="5dp"
		    android:textColor="#777777"
		    android:textSize="15sp"
		    android:text="产地 :" />

		<TextView
		    android:id="@+id/origin"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignBaseline="@+id/tv4"
		    android:layout_alignBottom="@+id/tv4"
		    android:layout_alignLeft="@+id/brand"
		    android:textSize="15sp"
		    android:textColor="#999999"
		    android:text="诺克萨斯" />

		<TextView
		    android:id="@+id/tv5"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignLeft="@+id/tv4"
		    android:layout_below="@+id/tv4"
		      android:layout_marginTop="5dp"
		    android:textColor="#777777"
		    android:textSize="15sp"
		    android:text="葡萄酒类型 :" />

		<TextView
		    android:id="@+id/type"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignBaseline="@+id/tv5"
		    android:layout_alignBottom="@+id/tv5"
		    android:layout_toRightOf="@+id/tv5"
		    android:layout_marginLeft="10dp"
		     android:textSize="15sp"
		    android:textColor="#999999"
		    android:text="卡特琳娜" />

		<!-- <TextView
		    android:id="@+id/tv6"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignLeft="@+id/tv5"
		    android:layout_below="@+id/tv5"
		      android:layout_marginTop="5dp"
		    android:textColor="#777777"
		    android:textSize="15sp"
		    android:text="净含量 :" />

		<TextView
		    android:id="@+id/netcontent"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignBaseline="@+id/tv6"
		    android:layout_alignBottom="@+id/tv6"
		    android:layout_toRightOf="@+id/tv6"
		     android:layout_marginLeft="10dp"
		     android:textSize="15sp"
		    android:textColor="#999999"
		    android:text="500ml" /> -->

		<TextView
		    android:id="@+id/temappropriate"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignBaseline="@+id/tv7"
		    android:layout_alignBottom="@+id/tv7"
		    android:layout_toRightOf="@+id/tv7"
		     android:layout_marginLeft="10dp"
		     android:textSize="15sp"
		    android:textColor="#999999"
		    android:text="15到20摄氏度" />

		<TextView
		    android:id="@+id/tv8"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignLeft="@+id/tv7"
		    android:layout_below="@+id/tv7"
		      android:layout_marginTop="5dp"
		    android:textColor="#777777"
		    android:textSize="15sp"
		    android:text="待酒湿度 :" />

		<TextView
		    android:id="@+id/hemappropriate"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignBaseline="@+id/tv8"
		    android:layout_alignBottom="@+id/tv8"
		    android:layout_alignLeft="@+id/name"
		     android:textSize="15sp"
		    android:textColor="#999999"
		    android:text="百分之15到20"
		    />

		<ImageView
		    android:id="@+id/iv3"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignTop="@+id/brand"
		    android:layout_toRightOf="@+id/name"
		    android:layout_marginRight="20dp"
		    android:layout_alignParentRight="true"
		    android:src="@drawable/wenduua" />

		<TextView
		    android:id="@+id/hum"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignBaseline="@+id/tem"
		    android:layout_alignBottom="@+id/tem"
		    android:layout_toRightOf="@+id/tem"
		    android:text="15%"
		    android:textColor="#777777"
		    android:layout_marginLeft="10dp"
		    android:textSize="10sp" />

		<ImageView
		    android:id="@+id/prompt"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_below="@+id/tv8"
		    android:layout_centerHorizontal="true"
		    android:layout_marginTop="20dp"
		    android:src="@drawable/wenxintishikuanga" />

		<ImageView
		    android:id="@+id/iv4"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentBottom="true"
		    android:layout_alignParentLeft="true"
		    android:background="@drawable/biankuang" />

		<ImageButton
		    android:id="@+id/click"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignTop="@+id/iv4"
		    android:layout_centerHorizontal="true"
		    android:layout_marginTop="10dp"
		    android:background="@drawable/click" />

		<!-- <TextView
		    android:id="@+id/time"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_above="@+id/tv6"
		    android:layout_alignLeft="@+id/tem"
		    android:text="2015-05-15"
		    android:layout_marginLeft="-3dp"
		    android:textColor="#777777"
		    android:textSize="10sp" /> -->

		<TextView
		    android:id="@+id/tv7"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignLeft="@+id/tv5"
		    android:layout_below="@+id/tv5"
		    android:text="待酒温度 :"
		    android:layout_marginTop="5dp"
		    android:textColor="#777777"
		    android:textSize="15sp" />

		<TextView
		    android:id="@+id/prompt_text"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignLeft="@+id/click"
		    android:layout_alignTop="@+id/prompt"
		    android:text="提示提示"
		    android:textColor="#f5961b"
		    android:layout_marginLeft="-20dp"
		    android:layout_marginTop="10dp"
		    android:textSize="15sp" />

		<TextView
		    android:id="@+id/prompt_twotext"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_below="@+id/prompt_text"
		    android:layout_centerHorizontal="true"
		    android:layout_marginTop="10dp"
		    android:gravity="center"
		    android:text="啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦"
		    android:textColor="#f5961b" />

		<TextView
		    android:id="@+id/tem"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignLeft="@+id/iv3"
		    android:layout_alignTop="@+id/type"
		    android:layout_marginLeft="15dp"
		    android:text="15°C"
		    android:textColor="#777777"
		    android:textSize="10sp" />
	    
	</RelativeLayout>

</RelativeLayout>
