<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
     >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/juxingkuangg" />


    <TextView
        android:id="@+id/set_text"
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_alignTop="@+id/imageView1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="呜呜呜呜滴答滴答滴答滴答滴答滴答滴答滴答滴答滴答呜呜呜呜呜呜呜呜呜呜呜呜呜呜">
    </TextView>

     <View
        android:id="@+id/view1"
        android:layout_width="5dp"
        android:layout_height="130dp"
        android:layout_alignTop="@+id/imageView1"
        android:layout_marginLeft="50dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView1"
        android:background="#C4E78A" />

     <View
         android:id="@+id/view1"
         android:layout_width="50dp"
         android:layout_height="5dp"
         android:layout_alignTop="@+id/set_text"
         android:layout_marginTop="30dp"
         android:layout_toRightOf="@+id/imageView1"
         android:background="#E3F2CD" />

     <TextView
         android:id="@+id/set_time"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignTop="@+id/imageView1"
         android:layout_toRightOf="@+id/view1"
         android:layout_marginTop="30dp"
         android:layout_marginLeft="10dp"
         android:text="2015-05-25" />
     
</RelativeLayout>
