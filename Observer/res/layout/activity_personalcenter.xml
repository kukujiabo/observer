<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bjtwo" >
    
	    <RelativeLayout
        android:id="@+id/ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gerenzhongxinn"
        >
        
	        
	         <ImageButton
	            android:id="@+id/fanhui"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:layout_centerVertical="true"
	            android:layout_marginLeft="10dp"
	            android:background="@drawable/huanhui" />

	        <ImageView
	            android:id="@+id/tv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:layout_centerHorizontal="true"
	            android:background="@drawable/gerenjilu"
	            />
	        
	        <TextView
	            android:id="@+id/ok"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:layout_marginRight="20dp"
	            android:textSize="15sp"
	            android:textColor="@color/white"
	            android:text="保存" />
    </RelativeLayout>
    
	    <RelativeLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_below="@+id/ll"
	        android:background="@color/bjtwo"
	        >

	        <ImageButton
	            android:id="@+id/set_touxiang"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:layout_alignParentTop="true"
	            android:background="@drawable/t" />

	        <TextView
	            android:id="@+id/tv1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:layout_alignParentTop="true"
	            android:layout_marginTop="15dp"
	            android:layout_marginLeft="20dp"
	            android:textSize="20sp"
	            android:textColor="@color/black"
	            android:text="头像" />

	        <ImageView
	            android:id="@+id/iv2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_alignTop="@+id/tv1"
	            android:layout_marginRight="20dp"
	            android:background="@drawable/tt" />

	        <ImageButton
	            android:id="@+id/set_name"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:layout_below="@+id/set_touxiang"
	            android:layout_marginTop="15dp"
	            android:background="@drawable/t" />

	        <TextView
	            android:id="@+id/tv2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:layout_alignTop="@+id/set_name"
	             android:layout_marginTop="15dp"
	            android:layout_marginLeft="20dp"
	            android:textSize="20sp"
	            android:textColor="@color/black"
	            android:text="昵称" />

	        <TextView
	            android:id="@+id/show_name"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignLeft="@+id/show_touxiang"
	            android:layout_alignTop="@+id/tv2"
	            android:textSize="15sp"
	            android:textColor="@color/black"
	            android:text="某某某" />

	        <ImageView
	            android:id="@+id/imageView1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignLeft="@+id/iv2"
	            android:layout_alignTop="@+id/show_name"
	            android:layout_marginRight="20dp"
	            android:src="@drawable/tt" />

	        <ImageButton
	            android:id="@+id/set_phone"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:layout_below="@+id/set_name"
	            android:layout_marginTop="15dp"
	            android:background="@drawable/t" />

	        <TextView
	            android:id="@+id/tv3"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:layout_alignTop="@+id/set_phone"
	            android:layout_marginTop="15dp"
	            android:layout_marginLeft="20dp"
	            android:textSize="20sp"
	            android:textColor="@color/black"
	            android:text="登录手机号" />

	        <TextView
	            android:id="@+id/show_phone"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignLeft="@+id/show_name"
	            android:layout_alignTop="@+id/tv3"
	            android:textSize="15sp"
	            android:textColor="@color/black"
	            android:text="1511****" />

	        <ImageButton
	            android:id="@+id/tuichu"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_below="@+id/set_phone"
	            android:layout_centerHorizontal="true"
	            android:layout_marginTop="50dp"
	            android:background="@drawable/tuichuzhanghaoo" />

	        <ImageView
	            android:id="@+id/show_touxiang"
	            android:layout_width="40dp"
	            android:layout_height="40dp"
	            android:layout_alignBottom="@+id/iv2"
	            android:layout_alignRight="@+id/iv2"
	            android:layout_marginRight="30dp"
	            android:scaleType="centerCrop" />
	        
	    </RelativeLayout>
</RelativeLayout>
