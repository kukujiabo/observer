<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.peichong.observer"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CLEAR_APP_CACHE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.INTERACT_ACROSS_USERS_FULL" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:name="com.peichong.observer.application.ObserverApplication"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- 登录 -->
        <activity
            android:name="com.peichong.observer.activities.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" android:theme="@style/activityTheme">
            <intent-filter>

                <action android:name="android.intent.action.MAIN" />
			
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 控制台 -->
        <activity
            android:name="com.peichong.observer.slidingcurve.ControlActivity"
            android:launchMode="singleInstance"
            android:theme="@style/activityTheme"
            android:screenOrientation="portrait">
        </activity>

        <!-- 警告 -->
        <activity
            android:name="com.peichong.observer.warning.WarningActivity"
            android:theme="@style/activityTheme"
            android:screenOrientation="portrait">
        </activity>

        <!-- 资讯 -->
        <activity
            android:name="com.peichong.observer.information.InformationActivity"
            android:screenOrientation="portrait" android:theme="@style/activityTheme">
        </activity>

        <!-- 设置时间 -->
        <activity
            android:name="com.peichong.observer.slidingcurve.TimeActivity"
            android:screenOrientation="portrait" android:theme="@style/activityTheme">
        </activity>

        <!-- 设备管理 -->
        <activity
            android:name="com.peichong.observer.equipmentmgm.EquipmentMgmActivity"
            android:screenOrientation="portrait" android:theme="@style/activityTheme">
        </activity>

        <!-- 分析日志 -->
        <activity
            android:name="com.peichong.observer.analysislog.AnalysisLogActivity"
            android:screenOrientation="portrait" android:theme="@style/activityTheme">
        </activity>

        <!-- 设置页面 -->
        <activity
            android:name="com.peichong.observer.set.SetActivity"
            android:screenOrientation="portrait" android:theme="@style/activityTheme">
        </activity>

        <!-- 个人中心 -->
        <activity
            android:name="com.peichong.observer.personalcenter.PersonalCenterActivity"
            android:screenOrientation="portrait" android:theme="@style/activityTheme">
        </activity>

        <!-- 版本更新 -->
        <activity
            android:name="com.peichong.observer.versionupdate.VersionUpdateActivity"
            android:screenOrientation="portrait" android:theme="@style/activityTheme">
        </activity>

        <!-- 版本介绍 -->
        <activity
            android:name="com.peichong.observer.versionupdate.VersionIntroducedActivity"
            android:screenOrientation="portrait" android:theme="@style/activityTheme">
        </activity>

        <!-- 关于界面 -->
        <activity
            android:name="com.peichong.observer.about.AboutActivity"
            android:screenOrientation="portrait" android:theme="@style/activityTheme">
        </activity>
        
    </application>

</manifest>
